<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Homefragment.BookNow.BookResult">

    <TextView
        android:textColor="#000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Added to Shopping Cart!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            android:background="#ECD69B"
            android:textColor="#000"
            android:paddingTop="15dp"
            android:text="This item was already in your cart,
 the quantity has been uploaded."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_tripName"
            android:text="tripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_tripDate"
            android:text="tripDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_Apax"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Apax:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_Cpax"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Cpax:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_Spax"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Spax:"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_totalAmount"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Total Amount : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>



    <Button
        android:id="@+id/btn_ctnShop"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:background="#FF4500"
        android:textAllCaps="false"
        android:text="Continue Shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_proceed"
        android:background="#FF4500"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_marginLeft="0dp"
        android:text="Proceed to Check Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>