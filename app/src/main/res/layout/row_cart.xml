<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:scaleType="fitXY" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="180dp"
            android:background="#233E61" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_tripName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="TripName"
                android:textColor="#233E61"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Country"
                android:textColor="#233E61"
                android:textSize="15sp" />


            <TextView
                android:textColor="#233E61"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_tripDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="tripDate" />


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">


                <TextView
                    android:textColor="#233E61"
                    android:id="@+id/tv_AcounterTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Apax: " />

                <TextView
                    android:textColor="#233E61"
                    android:id="@+id/tv_CcounterTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Cpax: " />


                <TextView
                    android:textColor="#233E61"
                    android:id="@+id/tv_ScounterTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Spax: " />


            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

            <TextView
                android:textColor="#233E61"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/tv_totalAmount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="RM"
                android:textSize="20sp" />

               <TextView
                   android:text="remaining?"
                   android:id="@+id/tv_remaining"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="100dp"
                   android:layout_marginTop="5dp"
                   android:textColor="#ff6f00" />


           </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_edit"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:text="Edit"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/delete"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:text="Delete"
                android:textAllCaps="false" />


            <CheckBox
                android:layout_marginTop="10dp"
                android:layout_marginLeft="160dp"
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


