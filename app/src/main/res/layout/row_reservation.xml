<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:text="Pending Payment"
            android:textColor="#FF4500"
            android:textSize="10dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Booking Date"
            android:textSize="10sp" />

        <!--<TextView-->
            <!--android:text="id"-->
            <!--android:id="@+id/tv_reservation_id"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <Button
        android:id="@+id/btn_toPay"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="75dp"
        android:background="#FF4500"
        android:text="Proceed with Payment"
        android:textAllCaps="false"
        android:textColor="#fff" />

        <ImageView
            android:layout_marginTop="35dp"
            android:id="@+id/image1"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:scaleType="fitXY" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="215dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tripName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="TripName"
                android:textColor="#233E61"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="#233E61"
                android:id="@+id/tv_tripDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="tripDate"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Country"
                android:textColor="#233E61"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Duration"
                    android:textColor="#233E61"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Price"
                    android:textColor="#233E61"
                    android:textSize="20sp"
                    android:textStyle="bold" />



            </LinearLayout>


            <TextView
                android:id="@+id/tv_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Remaining"
                android:textColor="#ff6f00" />


        </LinearLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>