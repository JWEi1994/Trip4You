<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />



        <android.support.v7.widget.CardView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardBackgroundColor="#F60">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:src="@mipmap/ic_person"
                app:civ_border_color="#fff"
                app:civ_border_width="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Name"
                    android:textColor="#fff"
                    android:textSize="20sp" />


                <TextView
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Email"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/tv_editUserAcc"
        android:background="@color/white_color"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_editprofile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="Edit Profile"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tv_changePassword"
        android:background="@color/white_color"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_editor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="Change Password"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/tv_wishlist"
        android:background="@color/white_color"
        android:layout_marginTop="265dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_wishlist"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="Wishlist"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_toPay"
        android:background="@color/white_color"
        android:layout_marginTop="315dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_payment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="Pending Payment"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tv_bought"
        android:background="@color/white_color"
        android:layout_marginTop="365dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_folder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="Bought"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_contactus"
        android:background="@color/white_color"
        android:layout_marginTop="430dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_help"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="Contact Us"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_about"
        android:background="@color/white_color"
        android:layout_marginTop="480dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="About"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white_color"
        android:id="@+id/tv_logout"
        android:layout_marginTop="530dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:background="@color/white_color"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_exit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="34dp"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:textColor="#727272"
            android:text="Logout"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>

